# Application
APP_DEBUG=true

# Database
DB_DRIVER=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=phastapp
DB_USERNAME=phastapp
DB_PASSWORD=phastapp
DB_CHARSET=utf8mb4
DB_PREFIX=

# SQLite (alternative to MySQL/PostgreSQL)
# DB_DRIVER=sqlite
# DB_DATABASE=/path/to/database.sqlite

# PostgreSQL (alternative to MySQL)
# DB_DRIVER=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_USERNAME=postgres

# SQL Server (alternative to MySQL)
# DB_DRIVER=sqlsrv
# DB_PORT=1433
# DB_USERNAME=sa
# DB_TRUST_SERVER_CERTIFICATE=false

# Authentication (JWT)
AUTH_SECRET=your-secret-key-change-this-in-production
AUTH_ALGORITHM=HS256
AUTH_REQUIRED=true
AUTH_HEADER=Authorization
AUTH_PREFIX=Bearer

# Cache
CACHE_DRIVER=file
# CACHE_DRIVER=memory
# CACHE_DRIVER=redis
# CACHE_DRIVER=predis
# CACHE_DRIVER=memcache

# Redis (for cache and/or queue)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_PASSWORD=
REDIS_SCHEME=tcp
REDIS_CONNECTION=

# Memcache (for cache)
MEMCACHE_HOST=memcache
MEMCACHE_PORT=11211

# Logging
LOG_BACKEND=file
# LOG_BACKEND=stdio
# LOG_BACKEND=daily
LOG_STDIO_STREAM=stdout
LOG_FORMATTER=simple
# LOG_FORMATTER=json

# Mail
MAIL_DRIVER=smtp
# MAIL_DRIVER=mailgun
# MAIL_DRIVER=resend

# SMTP Configuration
MAIL_HOST=mailcatcher
MAIL_PORT=25
MAIL_ENCRYPTION=
# MAIL_ENCRYPTION=tls
# MAIL_ENCRYPTION=ssl
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_TIMEOUT=30

# Mailgun Configuration
MAILGUN_DOMAIN=
MAILGUN_API_KEY=
MAILGUN_REGION=us
# MAILGUN_REGION=eu

# Resend Configuration
RESEND_API_KEY=

# Queue
QUEUE_DRIVER=redis
# QUEUE_DRIVER=sqs
# QUEUE_DRIVER=elasticmq
QUEUE_NAME=default

# AWS SQS / ElasticMQ Configuration
AWS_SQS_VERSION=latest
AWS_REGION=us-east-1
AWS_SQS_ENDPOINT=
# AWS_SQS_ENDPOINT=http://elasticmq:9324
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
